<body style="
    background: url('https://gcs.tripi.vn/public-tripi/tripi-feed/img/474118CkR/background-powerpoint-trai-cay-dep_044211553.jpg')
      no-repeat center;
    background-size: cover;
  ">
    <% dataHomeLsp.forEach((dataLsp)=> { %>

        <div class="container mt-2">
            <div class="Tieu_de" style="margin: 0px; background-color: #30db80; width: 100%">
                <div style="background-color: #32c267; color: black">
                    <%= dataLsp.Ten %>
                </div>
            </div>
            <div class="row">
                <% dem=1; dataHomeSp.forEach((dataSp)=> { if(dataLsp.ID ==
                    dataSp.ID_LoaiSanPham && dem <= 4 ){ %>
                        <div class="col-sm-3">
                            <a href="/customer/san-pham/chi-tiet/<%= dataLsp.ID %>/<%= dataSp.ID %>"
                                style="color: black">
                                <div class="card" style="
              width: 18rem;
              margin-top: 10px;
              background-color: rgba(240, 253, 247, 0.7);
              border-radius: 10px;
            ">
                                    <img src="/admin/image/<%= dataSp.imgName %>" class="card-img-top" id="NgoaiNhap1"
                                        alt="..." style="max-height: 450px" />

                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= dataSp.TenSanPham %>
                                        </h5>
                                        <p class="card-text">Xuất xứ: <%= dataSp.XuatXu %>
                                        </p>
                                        <p class="card-text">Giá bán: <%= dataSp.GiaBan %>/kg</p>
                                        <p class="card-text">Số lượng: <%= dataSp.SoLuong %>kg</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% dem +=1 } }) %>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end" style="margin: 10px 0px">
                <button class="btn btn-primary me-md-2 mb-2" type="button"
                    style="background: #30db80; border-color: #00e85d">
                    <a href="/customer/san-pham/loai-san-pham/<%= dataLsp.ID %>">Xem tất cả <i class="fa fa-arrow-right"
                            aria-hidden="true"></i></a>
                </button>
            </div>
        </div>

        <% }) %>
</body>